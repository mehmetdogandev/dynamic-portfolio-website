# ============================================
# PRODUCTION - dynamic-portfolio-website
# Copy to .env.prod and fill values
# ============================================
# Uses external Postgres on host. Ports: Next 8081, MinIO 9010/9011, Drizzle 7711

# --------------------------------------------
# App
# --------------------------------------------
PORT=8081
APP_PORT=8081
NODE_ENV=production

# --------------------------------------------
# External Postgres (host - same server)
# --------------------------------------------
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=dynamic_website
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_password

# For containers: host.docker.internal reaches host Postgres
DATABASE_URL=postgresql://postgres:your_password@host.docker.internal:5432/dynamic_website

# --------------------------------------------
# Auth (use your public IP or domain)
# --------------------------------------------
BETTER_AUTH_SECRET=your_32_char_secret
BETTER_AUTH_URL=http://YOUR_IP:8081
NEXT_PUBLIC_APP_URL=http://YOUR_IP:8081
TRUSTED_ORIGINS=http://YOUR_IP:8081

# --------------------------------------------
# MinIO (ports 9010 API, 9011 Console)
# --------------------------------------------
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=your_minio_password
MINIO_API_PORT=9010
MINIO_CONSOLE_PORT=9011

S3_ENDPOINT=minio
S3_PORT=9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=your_minio_password
S3_USE_SSL=false
S3_BUCKET_NAME=uploads
S3_REGION=eu-central-1

# --------------------------------------------
# Site URL (for sitemap, SEO)
# --------------------------------------------
NEXT_PUBLIC_SITE_URL=https://mehmetdogandev.com

# --------------------------------------------
# Drizzle Gateway (port 7711)
# --------------------------------------------
DRIZZLE_GATEWAY_PORT=7711
DRIZZLE_GATEWAY_PASSWORD=your_gateway_password
