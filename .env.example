# ============================================
# Environment Variables Example
# Copy this file to `.env` or `.env.prod`
# ============================================

# --------------------------------------------
# Better Auth
# --------------------------------------------
# Secret used by Better Auth (generate a strong random string)
BETTER_AUTH_SECRET=your_better_auth_secret_here

# Application URL
BETTER_AUTH_URL=http://localhost:3000


# --------------------------------------------
# Database (PostgreSQL + Drizzle)
# --------------------------------------------
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=dynamic_website
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_postgres_password_here

# Full database connection string
DATABASE_URL=postgresql://postgres:your_postgres_password_here@localhost:5432/dynamic_website


# --------------------------------------------
# Drizzle Kit Studio (Production Only)
# --------------------------------------------
# Port where Drizzle Studio will run
DRIZZLE_KIT_STUDIO_PORT=8811

# Password to protect Drizzle Studio
DRIZZLE_KIT_STUDIO_PASSWORD=your_drizzle_studio_password_here


# --------------------------------------------
# MinIO (Object Storage)
# --------------------------------------------
MINIO_ROOT_USER=your_minio_username
MINIO_ROOT_PASSWORD=your_minio_password
