# ============================================
# Environment Variables Example
# Copy this file to `.env` or `.env.prod`
# ============================================

# --------------------------------------------
# Better Auth
# --------------------------------------------
# Secret used by Better Auth (generate a strong random string)
BETTER_AUTH_SECRET=your_better_auth_secret_here

# Application URL (use https for local dev when using --experimental-https)
BETTER_AUTH_URL=https://localhost:3000


# --------------------------------------------
# Database (PostgreSQL + Drizzle)
# --------------------------------------------
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=portfolio_website
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_postgres_password_here

# Full database connection string
DATABASE_URL=postgresql://postgres:your_postgres_password_here@localhost:5432/portfolio_website


# --------------------------------------------
# Drizzle Kit Studio (Production Only)
# --------------------------------------------
# Port where Drizzle Studio will run
DRIZZLE_KIT_STUDIO_PORT=8811

# Password to protect Drizzle Studio
DRIZZLE_KIT_STUDIO_PASSWORD=your_drizzle_studio_password_here


# --------------------------------------------
# MinIO (Object Storage + Admin Console)
# --------------------------------------------
MINIO_ROOT_USER=your_minio_username
MINIO_ROOT_PASSWORD=your_minio_password
# Ports (optional; defaults: 9000 API, 9001 Console)
MINIO_API_PORT=9000
MINIO_CONSOLE_PORT=9001

# S3 / MinIO application config (use same as MINIO_ROOT_* for local dev)
S3_ENDPOINT=localhost
S3_PORT=9000
S3_ACCESS_KEY=your_minio_username
S3_SECRET_KEY=your_minio_password
S3_USE_SSL=false
S3_BUCKET_NAME=uploads
S3_REGION=us-east-1
